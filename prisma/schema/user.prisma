model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String
  role      Role     @default(MEMBER)

  // API Keys
  replicateApiKey String? // User's personal Replicate API token

  // Subscription Interest
  subscriptionInterestAt DateTime? // When the user expressed interest in subscribing

  // Relations
  queuedEmails QueuedEmail[]
  projects     Project[]
}

enum Role {
  MEMBER
  ADMIN
}
