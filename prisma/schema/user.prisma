model User {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String
  role      Role     @default(MEMBER)

  // Onboarding
  onboardingCompletedAt DateTime? // When initial onboarding was completed

  // API Keys
  replicateApiKey String? // User's personal Replicate API token

  // Subscription Interest
  subscriptionInterestAt DateTime? // When the user expressed interest in subscribing

  // Subscription
  stripeCustomerId String?   @unique
  plan             Plan      @default(FREE)
  credits          Int       @default(5) // New users get 3 free credits
  creditsPeriodEnd DateTime? // When current credit period ends

  // Relations
  queuedEmails QueuedEmail[]
  projects     Project[]
}

enum Role {
  MEMBER
  ADMIN
}

enum Plan {
  FREE
  SUBSCRIBED
}
